@model DDDSample.Application.ViewModels.AdvViewModel
@{
        ViewData["Title"] = "Registra novo anuncio";
}

<h2>@ViewData["Title"]</h2>
<div id="vehicleDiv">


</div>


<form asp-action="Create">
    <div class="form-horizontal">
        <hr />

        @* Replacing classic Validation Summary to Custom ViewComponent as TagHelper *@
        <vc:summary />

        <div class="form-group">
            <label asp-for="Marca" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Modelo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Versao" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Versao" class="form-control" />
                <span asp-validation-for="Versao" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Ano" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Quilometragem" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Quilometragem" class="form-control" />
                <span asp-validation-for="Quilometragem" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Observacao" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Observacao" class="form-control" />
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    /*
    jQuery(document).ready(function() {
        getVehicle(1);
    });
    */
function getVehicle() {
    $.ajax({
        // Get Vehicles Swagger
        url: "/vehicle/getveiculos",
        type: 'GET',
        data: { veiculo: pageID },
        success: function (data)
        {
            $("#vehicleDiv").empty();

            jQuery("#vehicleDiv").html(data);
        },
        error: function (error) {
            alert("Error: Please try again.");
        }
    });
}
</script>